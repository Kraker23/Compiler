

<RadzenCard>
    <RadzenRow>
        <RadzenColumn Size="12" SizeLG="1">
            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">ID</RadzenText>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeLG="9">
            <RadzenTextBox Value=@id Style="width: 100%" aria-label="Default TextBox" Disabled="true" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeLG="1">
            <RadzenButton Click="@SaveClick" Text="Save" Icon="save" IconColor="@Colors.Info"></RadzenButton>
        </RadzenColumn>
    </RadzenRow>
</RadzenCard>


@code {
    [Parameter]
    public string id { get; set; }

    [Parameter]
    public EventCallback saveEvent { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();       
    }

    void SaveClick()
    {
        saveEvent.InvokeAsync();
    }
}
